<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
        android:id="@+id/main_menu_card"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="150dp"
        android:layout_width="150dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_bg_color"
        >
        <LinearLayout
            android:id="@+id/main_menu_card_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/main_menu_card_image"
                android:layout_width="72dp"
                android:layout_height="72dp"

                android:src="@drawable/clocl"
                />
            <TextView
                android:id="@+id/main_menu_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:text="SomeText"
                android:textColor="@color/black" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
